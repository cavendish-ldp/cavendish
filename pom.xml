         <exclusion>  
           <groupId>org.openrdf.sesame</groupId>
           <artifactId>sesame-store-testsuite</artifactId>
         </exclusion>
         <exclusion>  
           <groupId>org.eclipse.jetty</groupId>
           <artifactId>jetty-server</artifactId>
